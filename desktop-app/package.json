{
  "name": "fambudget-desktop",
  "version": "5.0.2",
  "description": "FamBudget v4.0.1 - Advanced Family Budgeting with Income Tracking, Multi-Currency Support and Analytics",
  "main": "main.js",
  "homepage": "./",
  "author": {
    "name": "GenXis Innovations",
    "email": "genxisinnovation@outlook.com"
  },
  "license": "Apache-2.0",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build-exe": "electron-builder --win nsis",
    "build-msi": "electron-builder --win msi",
    "build-portable": "electron-builder --win portable",
    "build-msix": "electron-builder --win appx",
    "build-all-formats": "electron-builder --win nsis msi portable appx"
  },
  "build": {
    "appId": "com.fambudget.desktop",
    "productName": "FamBudget",
    "copyright": "Copyright (c) 2025 GenXis Innovations. All rights reserved.",
    "directories": {
      "output": "dist-v5.0.2"
    },
    "asar": false,
    "asarUnpack": [
      "**/*.node",
      "**/node_modules/chart.js/**"
    ],
    "files": [
      "main.js",
      "index.html",
      "app.js",
      "api.js",
      "styles.css",
      "chart.umd.js",
      "assets/**/*"
    ],
    "extraResources": [
      {
        "from": "assets/",
        "to": "assets/"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "msi",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        },
        {
          "target": "appx",
          "arch": ["x64"]
        }
      ],
      "artifactName": "FamBudget-${version}-${arch}.${ext}",
      "icon": "assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "FamBudget",
      "runAfterFinish": true
    },
    "msi": {
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "portable": {
      "artifactName": "FamBudget-Portable-${version}-${arch}.${ext}"
    },
    "appx": {
      "identityName": "GenXisInnovations.FamBudget",
      "publisher": "CN=GenXis Innovations",
      "publisherDisplayName": "GenXis Innovations",
      "displayName": "FamBudget",
      "applicationId": "FamBudget",
      "backgroundColor": "#1976d2"
    },
    "electronLanguages": "all"
  },
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "axios": "^1.5.0",
    "chart.js": "^4.5.1"
  }
}
