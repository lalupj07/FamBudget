{
  "name": "fambudget-desktop",
  "version": "3.5.1",
  "description": "FamBudget v2.0 - Advanced Family Budgeting with Income Tracking, Multi-Currency Support and Analytics",
  "main": "main.js",
  "homepage": "./",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-mac": "electron-builder --mac",
    "build-linux": "electron-builder --linux",
    "build-exe": "electron-builder --win nsis",
    "build-msi": "electron-builder --win msi",
    "build-msix": "electron-builder --win appx",
    "build-portable": "electron-builder --win portable",
    "build-all-formats": "electron-builder --win nsis --win msi --win appx --win portable",
    "build-all": "electron-builder --win --mac --linux",
    "dist": "npm run build",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps",
    "build:web": "node build-web.js",
    "deploy": "npm run build:web && gh-pages -d web-build -t"
  },
  "build": {
    "appId": "com.fambudget.desktop",
    "productName": "FamBudget",
    "copyright": "Copyright (c) 2025 GenXis Innovations. All rights reserved.",
    "directories": {
      "output": "dist-v3.5.1"
    },
    "compression": "maximum",
    "asar": true,
    "asarUnpack": [],
    "files": [
      "**/*",
      "!dist",
      "!dist-new",
      "!dist-v2.0.0",
      "!dist-v2.0.1",
      "!build",
      "!node_modules",
      "!*.md",
      "!create_simple_icon.py",
      "!create-icon.html",
      "!**/*.map"
    ],
    "extraResources": [
      {
        "from": "assets/",
        "to": "assets/",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "node_modules/chart.js/dist/",
        "to": "vendor/chart.js/",
        "filter": [
          "chart.umd.js"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.png",
      "requestedExecutionLevel": "asInvoker",
      "artifactName": "FamBudget-${version}-${arch}.${ext}",
      "sign": null,
      "signingHashAlgorithms": null,
      "certificateFile": null,
      "certificatePassword": null
    },
    "electronLanguages": ["en"],
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "FamBudget v3.5.1",
      "deleteAppDataOnUninstall": false,
      "runAfterFinish": true,
      "menuCategory": "Finance",
      "differentialPackage": false
    },
    "appx": {
      "identityName": "FamBudget.Desktop",
      "publisher": "CN=GenXis Innovations",
      "publisherDisplayName": "GenXis Innovations",
      "displayName": "FamBudget",
      "backgroundColor": "#1976d2",
      "applicationId": "FamBudget.Desktop",
      "showNameOnTiles": true,
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    }
  },
  "keywords": [
    "budget",
    "family",
    "finance",
    "expense",
    "tracking",
    "desktop",
    "income",
    "currency",
    "analytics",
    "recurring",
    "multi-user"
  ],
  "author": {
    "name": "GenXis Innovations",
    "email": "genxisinnovation@outlook.com",
    "url": "https://github.com/lalupj07/GenXlink"
  },
  "license": "Apache-2.0",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "gh-pages": "^6.1.0"
  },
  "dependencies": {
    "axios": "^1.5.0",
    "chart.js": "^4.5.1"
  }
}
