{
  "name": "fambudget-desktop",
  "version": "4.5.0",
  "description": "FamBudget v4.5.0 - Advanced Family Budgeting with Income Tracking & Analytics",
  "main": "main.js",
  "homepage": "./",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win --x64",
    "dist": "npm run build"
  },
  "build": {
    "appId": "com.fambudget.desktop",
    "productName": "FamBudget",
    "directories": {
      "output": "dist-v4.5.0"
    },
    "files": [
      "**/*",
      "!node_modules",
      "!package-lock.json",
      "!FamBudget-Portable*",
      "!dist*"
    ],
    "win": {
      "target": "nsis",
      "artifactName": "FamBudget-Setup-${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "FamBudget v4.5.0"
    }
  },
  "keywords": [
    "budget",
    "family",
    "finance",
    "expense",
    "tracking",
    "desktop",
    "income",
    "analytics"
  ],
  "author": {
    "name": "GenXis Innovations",
    "email": "genxisinnovation@outlook.com"
  },
  "license": "Apache-2.0",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "chart.js": "^4.5.1"
  }
}
